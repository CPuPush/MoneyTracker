<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_transaction_container_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_hamburger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:id="@+id/ll_fragment_transaction_container"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_toEndOf="@id/iv_transaction_container_logo"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_transaction_container_logo"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_transaction_container_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Food and Beverage" />

        <TextView
            android:id="@+id/tv_transaction_container_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:textSize="12sp"
            tools:text="lunch" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_transaction_container_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/latoregular"
        android:text="20.000"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>