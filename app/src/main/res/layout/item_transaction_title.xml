<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_transaction_title_date"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:fontFamily="@font/latoregular"
        android:textColor="@android:color/primary_text_light"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="04" />

    <LinearLayout
        android:id="@+id/ll_fragment_transaction_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/tv_transaction_title_date"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/tv_transaction_title_date"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_transaction_title_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Wednesday" />

        <TextView
            android:id="@+id/tv_transaction_title_monthyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:textSize="12sp"
            tools:text="May 2022" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_transaction_title_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/latoregular"
        android:text="46.000"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>